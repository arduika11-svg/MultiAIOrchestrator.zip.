name: Build Android (Debug APK)

on:
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: 17

      # აქ ვაყენებთ Gradle 8.7-ს (wrapper-ის გარეშე)
      - name: Install Gradle 8.7
        run: |
          curl -sL https://services.gradle.org/distributions/gradle-8.7-bin.zip -o gradle.zip
          unzip -q gradle.zip
          echo "$PWD/gradle-8.7/bin" >> $GITHUB_PATH
          gradle -v

      # ავაგოთ აპკ MultiAIStarter მოდულიდან
      - name: Build Debug APK
        run: |
          gradle -p MultiAIStarter assembleDebug

      # ავტვირთოთ არტიფაქტად APK
      - name: Upload APK
        uses: actions/upload-artifact@v4
        with:
          name: app-debug
          path: MultiAIStarter/app/build/outputs/apk/debug/*.apk